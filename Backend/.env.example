# MySQL Database Configuration
# Copy this file to .env and fill in your actual values

# Database Host (localhost if running locally)
DB_HOST=localhost

# Database Port (default MySQL port is 3306)
DB_PORT=3306

# Database User (default MySQL user is root)
DB_USER=root

# Database Password (set during MySQL installation)
DB_PASSWORD=your_mysql_password

# Database Name (you'll create this)
DB_NAME=truestate_db

# Node Environment (development or production)
NODE_ENV=development

# API Port
PORT=5000

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:5173
